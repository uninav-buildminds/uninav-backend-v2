# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
#
# These variables configure the core behavior of the NestJS application,
# including the environment, port, and frontend URL.
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3200
FRONTEND_URL="http://localhost:3000"
SERVER_URL="http://localhost:3200"

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
#
# Specifies the connection URL for the PostgreSQL database.
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://your_user:your_password@your_host:your_port/your_db

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
#
# Configuration for JWT, password hashing, and cryptographic operations.
# -----------------------------------------------------------------------------
JWT_SECRET="your_jwt_secret_value"
BCRYPT_SALT_ROUNDS=11
BCRYPT_PEPPER='your_pepper_here'
CRYPTO_KEY='your_crypto_key'
CRYPTO_IV='your_crypto_iv'
CRYPTO_ENCRYPTION_ALGORITHM='aes-256-cbc'

# -----------------------------------------------------------------------------
# API KEYS
#
# Centralized API keys for internal services.
# -----------------------------------------------------------------------------
ROOT_API_KEY="your_root_api_key"

# -----------------------------------------------------------------------------
# IDRIVE E2 STORAGE
#
# S3-compatible cloud storage for study materials and other assets.
# -----------------------------------------------------------------------------
IDRIVE_ACCESS_KEY="your_idrive_access_key"
IDRIVE_SECRET_KEY="your_idrive_secret_key"
IDRIVE_REGION="your_idrive_region"
IDRIVE_ENDPOINT="https://your-idrive-endpoint.com"
IDRIVE_PRIVATE_BUCKET="uninav-private"
IDRIVE_PUBLIC_BUCKET="uninav-public"

# -----------------------------------------------------------------------------
# GOOGLE OAUTH & GMAIL API
#
# Credentials for Google services, including OAuth 2.0 and Gmail.
# -----------------------------------------------------------------------------
COMPANY_EMAIL='your_company_email@example.com'
COMPANY_NAME="YourCompanyName"

# OAuth Credentials
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_REDIRECT_URI="http://localhost:3200/auth/google/callback"

# Gmail API Credentials
GMAIL_CLIENT_ID="your_gmail_client_id"
GMAIL_CLIENT_SECRET="your_gmail_client_secret"
GMAIL_REFRESH_TOKEN="your_gmail_refresh_token"

# -----------------------------------------------------------------------------
# EMAIL SERVICES (FALLBACK PROVIDERS)
#
# API keys for transactional email providers used as fallbacks.
# -----------------------------------------------------------------------------

# Brevo
BREVO_API_KEY="your_brevo_api_key"
BREVO_SENDER_EMAIL="your_brevo_sender_email@example.com"

# MailSend
MAILSEND_API_KEY='your_mailsend_api_key'
MAILSEND_SENDER_EMAIL='your_mailsend_sender_email'

# Resend
RESEND_API_KEY='your_resend_api_key'
RESEND_SENDER_EMAIL='your_resend_sender_email'
